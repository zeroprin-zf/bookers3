<%= render 'template/user', user: @user %>
<%= render 'template/book', book: @book %>

<h1>Books</h1>
 <table>
   <thead>
     <tr>
       <th></th>
       <th>Title</th>
       <th>Opinion</th>
     </tr>
   </thead>
  <% @books.each do |book| %>
   <tbody>
     <tr>
       <td><%= image_tag 'no_image.jpg' %></td><!--画像クリックしてuserのshowページに飛ぶ-->
       <td><%= link_to book.title, book_path(book.id) %></td>
       <td><%= book.body %></td>
       <td id="favorite_btn_<%= book.id %>">
        <%= render "favorites/btn", book: book %>
       </td>
     </tr>
   </tbody>
  <% end %>
 </table>
